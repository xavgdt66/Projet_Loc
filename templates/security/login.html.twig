{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}


   


{% block body %}
 <style>
        .loginFormWorksans {
            font-family: "Work Sans", sans-serif;
      }

      #loginsubmit {
        background-color: #1432BE;
        color:white;
        border-color : #1432BE;
      }

      #registera{
      color:red;

      }
    

    </style>

<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black d-flex flex-column align-items-center">
                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0 loginFormWorksans">Logo</span>
                </div>

                <div style="margin: 15px;"></div>

                <div>
                    {% if error %}
                        <div class="alert alert-danger loginFormWorksans" role="alert">
                            L'adresse email et le mot de passe saisis ne correspondent pas
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                            <a href="{{ path('app_logout') }}" class="loginFormWorksans">Déconnexion</a>
                        </div>
                    {% endif %}
                </div>

                <div class="d-flex justify-content-center">
                    <form action="{{ path('app_login') }}" method="post" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3 loginFormWorksans" style="letter-spacing: 1px;">Connectez-vous</h3>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label loginFormWorksans" for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" class="loginform form-control" id="inputEmail" autocomplete="email" required autofocus>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label loginFormWorksans" for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" class="loginform form-control" id="inputPassword" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="pt-1 mb-4" >
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block loginFormWorksans" type="submit"  id="loginsubmit">Se connecter</button>
                        </div>

                        <p class="small mb-5 pb-lg-2">
                            <a href="/reset-password" class="text-muted loginFormWorksans">J’ai oublié mon mot de passe</a>
                        </p>
                        <p>Vous n’avez pas de compte ?
                            <a href="/register" class="link-info loginFormWorksans" id="registera">Inscrivez-vous</a>
                        </p>

                    </form>
                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://media.journaldelagence.com/wp-content/uploads/2020/07/batiments-anciens.png" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

{% endblock %}
