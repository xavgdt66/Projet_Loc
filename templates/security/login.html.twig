{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 offset-md-3">
    <form action="{{ path('app_login') }}" method="post">
					{% if error %}
					
						<h1>L'adresse email et le mot de passe saisis ne correspondent pas </h1>
					{% endif %}
					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté en tant que
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Déconnexion</a>
						</div> 
					{% endif %}

					<h1 class="h3 mb-3 font-weight-normal text-center">Veuillez vous connecter</h1>
					<label for="inputEmail">Adresse email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

					<label for="inputPassword">Mot de passe</label>
					<input
					type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					{# Ajouter la protection CSRF #}
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
