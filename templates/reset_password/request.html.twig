{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<style>
    #messagesendcheckbutton {
        margin-top: 20px; /* Ajoute une marge en haut du formulaire */
        margin-bottom: 200px; /* Ajoute une marge en bas du formulaire */
    }
     #titlecheckemail {
        margin-top: 80px; /* Ajoute une marge en haut du formulaire */
    }
</style>

<div class="container d-flex justify-content-center">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="text-center">
        <h1 id="titlecheckemail">Réinitialisez votre mot de passe</h1>
        {{ form_start(requestForm) }}

        {{ form_row(requestForm.email) }}
        <div>
            <small id="">
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary" id="messagesendcheckbutton">Envoyer un e-mail de réinitialisation du mot de passe</button>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}
