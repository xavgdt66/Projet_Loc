{# templates/listeUser.html.twig #}
{% extends  "@EasyAdmin/page/content.html.twig" %}
{% block title %}Liste des Utilisateurs
{% endblock %}

{% block content %}
 <div class="table-container">
	<h1>Liste des Utilisateurs</h1>

	


	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Email de l'utilisateurs</th>
				<th scope="col">Last</th>
				
			</tr>
		</thead>
		<tbody>
        			{% for user in users %}

			<tr>
				
				<td>{{ user.id }}</td>
				<td>{{ user.email }}</td>
				<td>
					<a href="{{ path('admin_validate_user', {'id': user.id}) }}">Valider</a>
				</td>
			</tr>
            			{% endfor %}

			
		</tbody>
	</table>
     </div>
    <style>
.center-content {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Si vous voulez centrer verticalement Ã©galement */
}

.table-container {
    width: 80%; /* Ajustez la largeur selon vos besoins */
}

    </style>
{% endblock %}
