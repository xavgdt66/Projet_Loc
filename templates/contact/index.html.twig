{% extends 'base.html.twig' %}

{% block title %}Contactez nous{% endblock %}




{% block body %}
<style>
	#titleformcontact {
		margin-top: 60px; /* Ajoute une marge en haut du formulaire */
		margin-bottom: 20px; /* Ajoute une marge en bas du formulaire */
	}
    #titlesubcontact {
		margin-top: 20px; /* Ajoute une marge en haut du formulaire */
		margin-bottom: 20px; /* Ajoute une marge en bas du formulaire */
	}
</style>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4" id="titleformcontact">Formulaire de Contact</h1>
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="form-group mb-3">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse Email'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Message'}}) }}
                </div>
                <button type="submit" id="titlesubcontact" class="btn btn-primary btn-block">{{ button_label|default('Envoyer') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
