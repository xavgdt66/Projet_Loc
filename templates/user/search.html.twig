{# templates/user/search.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(searchForm, {'attr': {'class': 'form'}}) }}
                    <div class="form-group">
                        {{ form_label(searchForm.email) }}
                        {{ form_widget(searchForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(searchForm.search) }}
                        {{ form_widget(searchForm.search, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                {{ form_end(searchForm) }}
            </div>
        </div>

        {% if users is not empty %}
            <div class="mt-4">
                <ul class="list-group">
                    {% for user in users %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ user.email }}
                            <a href="{{ path('app_profile', {'id': user.id}) }}" class="btn btn-primary">Consulter le profil</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}
