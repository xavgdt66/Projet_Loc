{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

				<h1 class="text-center mb-4">Inscription locataire</h1>

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
				{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.plainPassword, {
                    'label': 'Password',
                    'attr': {'class': 'form-control'} 
                }) }}
				{{ form_row(registrationForm.presentation, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.first_name, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.last_name, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.address, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.employement_status, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.net_income, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.guarantee, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.brochure, {'attr': {'class': 'form-control'}}) }}
				{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check'}}) }}

				<div class="d-grid gap-2">
					<button type="submit" class="btn btn-primary btn-block">Register</button>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
